{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile C++ file using g++"
        },
        {
            "label": "Run C++",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}.exe",
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "Build and Run",
            "dependsOn": ["Build C++", "Run C++"],
            "dependsOrder": "sequence"
        }
    ]
}
